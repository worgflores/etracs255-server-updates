    */

    @ProxyMethod 
    public void updateValidation( params ) {
        def u = [ validation: params.validation ]; 
        remFundEm.find([ objid: params.objid ]).update( u );
    }    

    @ProxyMethod 
    public void updateBankAccount( params ) {
        def u = [ bankaccount: params.bankaccount ]; 
        remFundEm.find([ objid: params.objid ]).update( u );
    }
}
