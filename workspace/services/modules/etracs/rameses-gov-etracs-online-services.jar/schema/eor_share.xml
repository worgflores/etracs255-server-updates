<schema adapter="eor">
	<element tablename="eor_share">
		<field name="objid" primary="true" prefix="EORSHR"/>
		<field name="parentid" required="true"/>
		
		<field name="refitem_objid" required="true"/>
		<field name="refitem_code" />
		<field name="refitem_title" required="true"/>

		<field name="payableitem_objid" required="true"/>
		<field name="payableitem_code" />
